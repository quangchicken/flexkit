{
  "sections": {
    "main": {
      "type": "collection-template",
      "settings": {
        "featured_collection_image": false,
        "wide_display": true,
        "image": "{{ collection.metafields.my_fields.banner_image.value }}",
        "mobile_image_crop": "none",
        "heading": "{{ collection.metafields.my_fields.banner_heading.value }}",
        "content": "<p>{{ collection.metafields.my_fields.banner_content | metafield_tag }}<\/p>",
        "text_color": "text-light",
        "caption_content_background": "original",
        "display_collection_title": true,
        "collection_breadcrumb": true,
        "collection_tags": true,
        "collection_sort": false,
        "products_per_row": 3,
        "pagination_limit": 36,
        "toggle": false
      }
    }
  },
  "order": [
    "main"
  ]
}